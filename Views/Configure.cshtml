@model Majako.Plugin.Misc.SalesForecasting.SalesForecastingPluginSettings
@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="SalesForecasting" asp-action="Configure" method="post">
    <div class="cards-group">
        <div class="card card-default">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-2">
                        <nop-label asp-for="ApiKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ApiKey" />
                        <span asp-validation-for="ApiKey"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="Margin" />
                    </div>
                    <div class="col-md-3">
                        <nop-editor asp-for="Margin" />
                        <span asp-validation-for="Margin"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-9 text-center">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
